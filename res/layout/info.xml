<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@android:color/white" android:clickable="true"
              android:id="@+id/panel">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1"
            android:paddingRight="10dp" android:paddingLeft="20dp" android:paddingTop="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="На основании статьи 112 Трудового кодекса при совпадении выходного и нерабочего праздничного дней выходной день в производственном календаре переносится на следующий после праздничного рабочий день."
                android:id="@+id/textView" android:textSize="11sp" android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"/>
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:stretchColumns="3" android:layout_marginBottom="10dp">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginBottom="5dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2" android:src="@drawable/info_1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="— рабочий день"
                        android:id="@+id/textView1" android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" android:textSize="11dp" android:textColor="@android:color/black"/>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow"
                      android:layout_marginBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView3" android:src="@drawable/info_2"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="— предпраздничный день" android:id="@+id/textView2" android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp" android:textSize="11dp"
                          android:textColor="@android:color/black"/>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tableRow1"
                      android:layout_marginBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView4" android:src="@drawable/info_3"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="— выходной или праздничный день" android:id="@+id/textView3" android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp" android:textSize="11dp"
                          android:textColor="@android:color/black"/>
            </TableRow>
        </TableLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="В 2013 году предусмотрен перенос выходных дней:" android:id="@+id/textView4"
                  android:layout_gravity="center_vertical" android:textSize="11dp"
                  android:textColor="@android:color/black" android:layout_weight="0"
                  android:layout_marginBottom="10dp"/>
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:stretchColumns="5">
            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_marginBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView6" android:src="@drawable/info_5"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_column="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="января"
                            android:id="@+id/textView5" android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp" android:textColor="#448ecd" android:textSize="17dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(сб)"
                            android:id="@+id/textView6" android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp" android:textColor="@android:color/black"
                            android:textSize="17dp"/>
                </LinearLayout>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView7" android:src="@drawable/info_arrow" android:layout_column="2"
                           android:layout_gravity="center" android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView8" android:src="@drawable/info_2m" android:layout_column="3"
                           android:layout_gravity="center_vertical"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_column="1"
                              android:id="@+id/linearLayout">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="мая" android:id="@+id/textView7" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="#448ecd" android:textSize="17dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="(чт)" android:id="@+id/textView8" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="@android:color/black"
                              android:textSize="17dp"/>
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:id="@+id/tableRow2" android:layout_marginBottom="5dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView9" android:src="@drawable/info_6"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_column="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="января" android:id="@+id/textView9" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="#448ecd" android:textSize="17dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="(вс)" android:id="@+id/textView10" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="@android:color/black"
                              android:textSize="17dp"/>
                </LinearLayout>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView10" android:src="@drawable/info_arrow" android:layout_column="2"
                           android:layout_gravity="center" android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView11" android:src="@drawable/info_3m" android:layout_column="3"
                           android:layout_gravity="center_vertical"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_column="1"
                              android:id="@+id/linearLayout1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="мая" android:id="@+id/textView11" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="#448ecd" android:textSize="17dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="(пт)" android:id="@+id/textView12" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="@android:color/black"
                              android:textSize="17dp"/>
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:id="@+id/tableRow3">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView12" android:src="@drawable/info_25"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_column="1">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="февраля" android:id="@+id/textView13" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="#448ecd" android:textSize="17dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="(пт)" android:id="@+id/textView14" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="@android:color/black"
                              android:textSize="17dp"/>
                </LinearLayout>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView13" android:src="@drawable/info_arrow" android:layout_column="2"
                           android:layout_gravity="center" android:layout_marginLeft="5dp"
                           android:layout_marginRight="5dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView14" android:src="@drawable/info_10m" android:layout_column="3"
                           android:layout_gravity="center_vertical"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="fill_parent" android:layout_column="1"
                              android:id="@+id/linearLayout2">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="мая" android:id="@+id/textView15" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="#448ecd" android:textSize="17dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="(пт)" android:id="@+id/textView16" android:layout_gravity="center_vertical"
                              android:layout_marginLeft="5dp" android:textColor="@android:color/black"
                              android:textSize="17dp"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="52dp"
                    android:background="@android:color/white" android:id="@+id/relativeLayout"
                    android:layout_weight="0">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView"
                   android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                   android:src="@drawable/logo" android:layout_marginLeft="20dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageView1"
                   android:layout_toRightOf="@+id/imageView" android:layout_centerVertical="true"
                   android:src="@drawable/ribbon" android:layout_alignParentRight="true" android:scaleType="fitXY"
                   android:layout_marginLeft="5dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5" android:layout_toRightOf="@+id/imageView"
                android:layout_above="@+id/imageView1" android:src="@drawable/slogan" android:layout_marginLeft="5dp"/>
    </RelativeLayout>
</LinearLayout>